<h1><%= @task.title %></h1>
<%= link_to "Edit the task", edit_path %>
<div class="bloc">
  <%= @task.details %>
</div>
<% if @task.completed %>
  <input type="checkbox" id="completed" name="completed" checked onclick="return false;">
<% else %>
  <input type="checkbox" id="completed" name="completed" onclick="return false;">
<% end %>
<div><%= link_to "Back to list", tasks_path %></div>